<%- include('../partials/header') %>

<main>
    <h2>Dodaj nowy post</h2>
    <% if(errors && errors.length > 0) { %>
        <ul class="error">
            <% errors.forEach(e => { %>
                <li><%= e %></li>
            <% }) %>
        </ul>
    <% } %>

    <form action="/admin/posts" method="POST">
        <label for="title">Tytuł:</label>
        <input type="text" id="title" name="title" value="<%= values.title || '' %>" required>

        <label for="author">Autor:</label>
        <input type="text" id="author" name="author" value="<%= values.author || '' %>">

        <label for="category">Kategoria:</label>
        <input type="text" id="category" name="category" value="<%= values.category || '' %>" required>

        <label for="content">Treść:</label>
        <textarea id="content" name="content" required><%= values.content || '' %></textarea>

        <button type="submit">Dodaj</button>
    </form>
</main>

<%- include('../partials/footer') %>
